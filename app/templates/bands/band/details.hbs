<section class="rr-panel">
  <button
    type="button"
    class="rr-action-button fr"
    {{on "click" (if this.isEditing this.save this.edit)}}
  >
    {{if this.isEditing "Save" "Edit"}}
  </button>

  <h3>Description</h3>
  {{#if this.isEditing}}
    <Textarea class="rr-textarea" @value={{this.model.description}} />
  {{else}}
    <p class="lh-copy">
      {{if this.model.description this.model.description "No description yet."}}
    </p>
  {{/if}}
</section>