<ul class="rr-list">
  {{#each this.model.songs as |song|}}
    <li class="rr-list-item">
      {{song.title}}
      <StarRating
        class="fr"
        @rating={{song.rating}}
        {{!-- @item={{song}} --}}
        {{!-- @onClick={{this.updateRating}} --}}
        @onClick={{fn this.updateRating song}}
      />
    </li>
  {{else}}
    <li class="tc">
      No
      {{this.model.name}}
      songs yet.
    </li>
  {{/each}}
</ul>
<div class="rr-new-label">
  {{#if this.isAddingSong}}
    <form {{on "submit" this.saveSong}} class="rr-inline-form">
      <Input
        @type="text"
        @value={{this.newSongTitle}}
        class="rr-input"
        placeholder="New song"
      />
      <button
        type="submit"
        class="rr-action-button"
        disabled={{this.isAddButtonDisabled}}
      >
        Add
      </button>
      <button
        type="button"
        class="rr-cancel-icon"
        {{on "click" this.cancelAddSong}}
      >
        {{fa-icon "times"}}
      </button>
    </form>
  {{else}}
    <button
      type="button"
      class="avenir bn bg-transparent near-white"
      data-test-rr="new-song-label"
      {{on "click" this.addSong}}
    >
      {{fa-icon "plus"}}
      Add new song
    </button>
  {{/if}}
</div>